<table data-toggle="bootgrid"
       data-ajax="true"
       data-url="list"
       data-list-type="person"
       data-selection="true"
       data-multi-select="true"
       data-keep-selection="true"
       data-can-add="false"
       data-row-select="true"
       class="table table-condensed table-hover table-striped"
       id="personGrid">
    <thead>
    <tr>

        <th data-column-id="_id"
            data-visible="false"
            data-identifier="true"
            data-visible-in-selection="false"
            data-type="string">ID
        </th>

        <th data-column-id="created"
            data-order="1"
            data-visible="false"
            data-visible-in-selection="false">Created
        </th>

        <th data-column-id="value.first_name"

            data-editable="false">Имя
        </th>

        <th data-column-id="value.last_name"

            data-editable="false">Фамилия
        </th>

        <th data-column-id="value.sex"
            data-formatter="sex"

            data-editable="false">Пол
        </th>

        <th data-column-id="value.photo_50"
            data-formatter="avatar"
            data-visible-in-selection="false">

        </th>

        <th data-formatter="commandsNotAll"
            data-sortable="false"

            data-visible-in-selection="false"></th>
    </tr>
    </thead>
</table>